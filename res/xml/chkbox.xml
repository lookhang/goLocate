<?xml version="1.0" encoding="utf-8"?>
<!-- This file is /res/xml/chkbox.xml -->
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="我的设置">
	<CheckBoxPreference
	    android:key="boot_autorun"
		android:title="开机启动"
		android:summary="手动设置软件是否开机启动" android:defaultValue="false" />
	<EditTextPreference
                android:key="server_addr"
                android:title="设置服务器IP"
                android:dialogTitle="服务器IP" android:defaultValue="192.168.1.50"/>
	<EditTextPreference
                android:key="server_port"
                android:title="设置服务器端口"
                android:dialogTitle="服务器端口" android:defaultValue="8888"/>
	<EditTextPreference
                android:key="perSecond"
                android:title="设置发送间隔（10s~999s）"
                android:dialogTitle="发送间隔" android:defaultValue="30"/>
	<CheckBoxPreference
                android:key="stopSend"
                android:title="停止发送数据"
                android:defaultValue="false" /> 
     <CheckBoxPreference
                android:key="openMonitor"
                android:title="打开进程守护"
                android:defaultValue="true" /> 

</PreferenceScreen>
